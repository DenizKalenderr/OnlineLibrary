@model BookType

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Türü Güncelle</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Kitap Türü Güncelle</button>

        <a asp-controller="BookType" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
            Kitap Türlerine Geri Dön
        </a>


    </div>
</form>
