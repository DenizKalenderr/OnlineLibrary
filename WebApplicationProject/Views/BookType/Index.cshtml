@model List<BookType>

@if (TempData["basarili"] != null)
{
    <h2 style="color:brown; font-size: 15px;">@TempData["basarili"]</h2>
}

    <div class="container">
        <div class="row pt-3 pb-4">
            <div>
            <h1>Kitap Türleri</h1>
            </div>

        </div>
        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Id
                     </th>
                     <th>
                         Kitap Türü
                     </th>
                     <th>

                     </th>
                     <th>

                     </th>
                </tr>
            </thead>

            <tbody>
                @foreach(var bookType in Model)
                {    
                    <tr>
                        <td>@bookType.Id</td>
                        <td>@bookType.Name</td>
                        <td>
                        <a asp-controller="BookType" asp-action="Update" asp-route-id="@bookType.Id" type="button" class="btn btn-outline-success" style="width:250px">Güncelle</a>
                        </td>
                        <td>
                        <a asp-controller="BookType" asp-action="Delete" asp-route-id="@bookType.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class = "row pt-3 pb-2">
            <div>
                <a asp-controller = "BookType" asp-action="Add" class="btn btn-lg btn-primary" type="button">
                    Yeni Kitap Türü Oluştur
                </a>
            </div>
        </div>
</div>